{
  "compilerOptions": {
      "experimentalDecorators": true,
      "baseUrl": "./",
      "paths" : {
        "*": ["./src/*"]
      },
      "outDir": "./dist",
      "allowJs": true,
      "target": "es5",
      "module": "commonjs",
      "allowSyntheticDefaultImports": true,
      "sourceMap": false,
      "noImplicitAny": false,
      "strictFunctionTypes": true,
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./dist",
    "./assets",
    "./raw_assets"
  ]
}
